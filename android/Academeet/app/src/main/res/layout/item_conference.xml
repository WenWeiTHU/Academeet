<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/conferenceItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:minHeight="90dp"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/conference_fav_button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/colorFav"
            android:src="@drawable/ic_fav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/conference_remind_button" />

        <ImageButton
            android:id="@+id/conference_remind_button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/colorRem"
            android:src="@drawable/ic_remind"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/conference_dislike_button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/colorDis"
            android:src="@drawable/ic_dislike"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minHeight="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/conference_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/conferenceItemTitle"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/conference_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxWidth="400dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Mar. 11, 08:00-10:00 | West Building Tsinghua University"
            android:textColor="#B6B2B2" />

        <TextView
            android:id="@+id/conference_host_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:layout_marginBottom="8dp"
            android:text="Micheal Jodan, Benjo Brude, Van Darkhome"
            android:textColor="#03A9F4" />
    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>