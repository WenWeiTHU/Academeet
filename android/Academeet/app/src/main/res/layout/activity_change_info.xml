<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChangeInfoActivity">

    <com.example.academeet.components.SettingTitleComponent
        android:id="@+id/change_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_info"
        app:layout_constraintTop_toBottomOf="@id/change_info"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_height="wrap_content"
        android:hint="Input something new"
        android:autofillHints=""
        android:inputType="text" />

</androidx.constraintlayout.widget.ConstraintLayout>