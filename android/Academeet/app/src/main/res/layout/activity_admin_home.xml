<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AdminHomeActivity"
    android:id="@+id/admin_home_drawer_layout"
    android:background="@color/adminPrimary">

    <!-- 主页内容 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/admin_home_content_frame">
        <include layout="@layout/content_admin_home"/>
    </FrameLayout>

    <!-- 侧边菜单 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/admin_home_menu_frame"
        android:layout_gravity="start">
        <include layout="@layout/menu_admin_home"/>
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>