<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white">
    <View
        android:id="@+id/seize_view"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints" />
    <EditText
        app:layout_constraintTop_toBottomOf="@id/seize_view"
        android:id="@+id/edit_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Title"
        android:maxLength="40"
        android:maxLines="1"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        />
    <EditText
        android:id="@+id/edit_note_abstract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="10dp"
        android:hint="Abstract"
        android:minLines="3"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/edit_note_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_note_abstract"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="6dp">
    <EditText
        android:id="@+id/edit_note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="15dp"
        android:minLines="20"
        android:background="@color/white"
        android:hint="Type Your Content Here"
        android:textColorHint="@color/colorPrimary"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>