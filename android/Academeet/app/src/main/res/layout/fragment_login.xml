<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="350dp"
        android:layout_height="47.94dp"
        android:src="@mipmap/logo"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        />

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="@color/colorPrimary"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="70dp"
        app:mtf_backgroundColor="@color/conferenceItemBackground"
        android:layout_gravity="center_horizontal"
        app:mtf_hasFocus="true"
        >

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/login_account_hint"
            android:imeOptions="actionNext"
            android:maxLength="@integer/account_max_length"
            android:nextFocusForward="@+id/login_password"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="@color/colorPrimary"
        android:layout_marginLeft="5dp"
        app:mtf_backgroundColor="@color/white"
        android:layout_gravity="center_horizontal"
        app:mtf_hasFocus="false"
        >
        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="@integer/password_max_length"
            android:hint="@string/login_password_hint"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:maxLines="1"
            />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <CheckBox
        android:id="@+id/login_remember_me"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_button"
                android:paddingTop="10dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingBottom="10dp"
                fancy:fb_textColor="@color/white"
                fancy:fb_text="@string/login_button"
                fancy:fb_borderColor="@color/colorPrimaryDark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_radius="30dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorAccent"
                android:onClick="startLogin"/>
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_button"
                android:layout_marginLeft="40dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                fancy:fb_textColor="@color/white"
                fancy:fb_text="@string/register_button"
                fancy:fb_borderColor="@color/colorPrimaryDark"
                fancy:fb_borderWidth="1dp"
                fancy:fb_radius="30dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorAccent"
                android:onClick="startRegister"/>
        </LinearLayout>

</LinearLayout>